cpu_avg_samples 2
double_buffer yes
no_buffers yes
update_interval 3

# Window settings.
background no
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades no
own_window yes
own_window_transparent yes
own_window_type desktop

alignment tr
pad_percents 2
border_inner_margin 10
border_outer_margin 0
gap_x 10
gap_y 10

# Fonts.
use_xft yes
xftfont Hack:size=14
uppercase no

# Solarized colors.
default_color 434c5e  # primary text
color1 434c5e  # emphesized text
color2 4c566a  # secondary text
color3 bf616a  # red
color4 a3be8c  # green
color5 5e81ac  # blue
color6 b48ead  # violet
color7 ebcb8b  # yellow
color8 d08770  # orange
color9 1e2430  # background


TEXT
${color1}$hr
${color}OS
#
${color1}
UTC             ${goto 150}${utime}${voffset 5}
Uptime          ${goto 150}${uptime}${voffset 5}
Kernel          ${goto 150}${kernel}${voffset 5}
${color1}Load   ${goto 140}${voffset -10}${color9}${loadgraph 24,300 073642 073642 0 -l}
${color1}       ${goto 150}${voffset -36}${loadavg}${voffset 5}
${color1}CPU    ${goto 140}${voffset -10}${color9}${cpubar 24,300}
${color1}       ${goto 150}${voffset -36}${cpu}%${alignr 20}${running_processes}/${processes} :${threads}${voffset 5}
${color1}RAM    ${goto 140}${voffset -10}${color9}${membar 24,300}
${color1}       ${goto 150}${voffset -36}${memperc}% ${alignr 20}${mem}${voffset 5}
RAM Cached      ${goto 150}${cached}

${color2}$hr
${color}HARDWARE

${color2}Freq       ${goto 150}${freq_g} GHz ${voffset 5}
${color2}Disk IO    ${goto 140}${voffset -10}${diskiograph sda 24,300 073642 073642 0 -l}
${color2}           ${goto 150}${voffset -36}R ${diskio_read}${alignr 20}W ${diskio_write}${voffset 5}
${color2}Entropy    ${goto 140}${voffset -10}${color9}${entropy_bar 24,300}
${color2}           ${goto 150}${voffset -36}${entropy_avail}${alignr 20}/${entropy_poolsize} b${voffset 5}
${color2}Battery    ${goto 140}${voffset -10}${color9}${battery_bar 24,300}
${color2}           ${goto 150}${voffset -36}${battery_short}${alignr 20}${battery_time}

${color2}$hr
${color}FILE SYSTEMS

${color2}/          ${goto 140}${voffset -10}${color9}${fs_bar 24,300 /}
${color2}           ${voffset -36}${alignr 20}${fs_used /} / ${fs_size /}${voffset 5}
${color2}/var       ${goto 140}${voffset -10}${color9}${fs_bar 24,300 /var}
${color2}           ${voffset -36}${alignr 20}${fs_used /var} / ${fs_size /var}${voffset 5}
${color2}/home      ${goto 140}${voffset -10}${color9}${fs_bar 24,300 /home}
${color2}           ${voffset -36}${alignr 20}${fs_used /home} / ${fs_size /home}${voffset 5}

${color2}$hr
${color}NETWORK

${if_up wlp58s0}\
${color}wlp58s0     ${goto 150}${color2}${addr wlp58s0}${voffset 5}
${wireless_essid wlp58s0}\
${goto 140}${voffset -10}${color9}${wireless_link_bar 24,300 wlp58s0}${color2}
${goto 150}${voffset -36}${wireless_mode wlp58s0}  ${wireless_bitrate wlp58s0}  ${wireless_link_qual_perc wlp58s0}%
${goto 150}${upspeedgraph wlp58s0 24,135 073642 073642 0 -l}  ${downspeedgraph wlp58s0 24,135 073642 073642 0 -l}
${voffset -36}  ${goto 150}↑ ${upspeed wlp58s0} ${alignr 20}↓ ${downspeed wlp58s0}
      Total     ${goto 150}▲ ${totalup wlp58s0} ${alignr 20}▼ ${totaldown wlp58s0}
${endif}

${if_up enp57s0u1u4}\
${color}enp57s0u1u4     ${goto 150}${color2}${addr enp57s0u1u4}${voffset 5}
${wireless_essid enp57s0u1u4}\
${goto 150}${voffset -10}${upspeedgraph enp57s0u1u4 24,135 073642 073642 0 -l}  ${downspeedgraph enp57s0u1u4 24,135 073642 073642 0 -l}
${voffset -36}  ${goto 150}↑ ${upspeed enp57s0u1u4} ${alignr 20}↓ ${downspeed enp57s0u1u4}
      Total     ${goto 150}▲ ${totalup enp57s0u1u4} ${alignr 20}▼ ${totaldown enp57s0u1u4}
${endif}
${color2}$hr
${voffset -120}
