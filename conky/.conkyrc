cpu_avg_samples 2
double_buffer yes
no_buffers yes
text_buffer_size 2048
update_interval 3

# Window settings.
background no
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades no
own_window yes
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
own_window_transparent no
own_window_type override
own_window_colour 002e39

alignment tl
pad_percents 2
border_inner_margin 0
border_outer_margin 0
gap_x 1500
gap_y 30

# Fonts.
use_xft yes
xftfont Dejavu Sans Mono:size=14
uppercase no

# Solarized colors.
default_color 839496  # primary text
color1 93a1a1  # emphesized text
color2 586e75  # secondary text
color3 dc322f  # red
color4 859900  # green
color5 268bd2  # blue
color6 6c71c4  # violet
color7 b58900  # yellow
color8 cb4b16  # orange
color9 073642  # background hilight


TEXT
${color2}$hr
${color}OS
#
${color2}
UTC             ${goto 150}${utime}${voffset 5}
Uptime          ${goto 150}${uptime}${voffset 5}
Kernel          ${goto 150}${kernel}${voffset 5}
${color2}Load   ${goto 140}${voffset -10}${color9}${loadgraph 24,245 073642 073642 0 -l}
${color2}       ${goto 150}${voffset -36}${loadavg}${voffset 5}
${color2}CPU    ${goto 140}${voffset -10}${color9}${cpubar 24,245}
${color2}       ${goto 150}${voffset -36}${cpu}%${alignr 10}${running_processes}/${processes} :${threads}${voffset 5}
${color2}RAM    ${goto 140}${voffset -10}${color9}${membar 24,245}
${color2}       ${goto 150}${voffset -36}${memperc}% ${alignr 10}${mem}${voffset 5}
RAM Cached      ${goto 150}${cached}

${color2}$hr
${color}HARDWARE

${color2}Freq       ${goto 150}${freq_g} GHz ${voffset 5}
${color2}Disk IO    ${goto 140}${voffset -10}${diskiograph sda 24,245 073642 073642 0 -l}
${color2}           ${goto 150}${voffset -36}R ${diskio_read}${alignr 10}W ${diskio_write}${voffset 5}
${color2}Entropy    ${goto 140}${voffset -10}${color9}${entropy_bar 24,245}
${color2}           ${goto 150}${voffset -36}${entropy_avail}${alignr 10}/${entropy_poolsize} b${voffset 5}
${color2}Battery    ${goto 140}${voffset -10}${color9}${battery_bar 24,245}
${color2}           ${goto 150}${voffset -36}${battery_short}${alignr 10}${battery_time}

${color2}$hr
${color}FILE SYSTEMS

${color2}/          ${goto 140}${voffset -10}${color9}${fs_bar 24,245 /}
${color2}           ${voffset -36}${alignr 10}${fs_used /} / ${fs_size /}${voffset 5}
${color2}/var       ${goto 140}${voffset -10}${color9}${fs_bar 24,245 /var}
${color2}           ${voffset -36}${alignr 10}${fs_used /var} / ${fs_size /var}${voffset 5}
${color2}/home      ${goto 140}${voffset -10}${color9}${fs_bar 24,245 /home}
${color2}           ${voffset -36}${alignr 10}${fs_used /home} / ${fs_size /home}${voffset 5}

${color2}$hr
${color}NETWORK

${if_up wlp58s0}\
${color}wlp58s0     ${goto 150}${color2}${addr wlp58s0}${voffset 5}
${wireless_essid wlp58s0}\
${goto 140}${voffset -10}${color9}${wireless_link_bar 24,245 wlp58s0}${color2}
${goto 150}${voffset -36}${wireless_mode wlp58s0}  ${wireless_bitrate wlp58s0}  ${wireless_link_qual_perc wlp58s0}%
${goto 150}${upspeedgraph wlp58s0 24,125 073642 073642 0 -l}  ${downspeedgraph wlp58s0 24,125 073642 073642 0 -l}
${voffset -36}  ${goto 150}↑ ${upspeed wlp58s0} ${alignr}↓ ${downspeed wlp58s0}
                ${goto 150}▲ ${totalup wlp58s0} ${alignr}▼ ${totaldown wlp58s0}
${endif}

${if_up enp57s0u1u4}\
${color}enp57s0u1u4     ${goto 150}${color2}${addr enp57s0u1u4}${voffset 5}
${wireless_essid enp57s0u1u4}\
${goto 150}${upspeedgraph enp57s0u1u4 24,125 073642 073642 0 -l}  ${downspeedgraph enp57s0u1u4 24,125 073642 073642 0 -l}
${voffset -36}  ${goto 150}↑ ${upspeed enp57s0u1u4} ${alignr}↓ ${downspeed enp57s0u1u4}
                ${goto 150}▲ ${totalup enp57s0u1u4} ${alignr}▼ ${totaldown enp57s0u1u4}
${endif}
${color2}$hr
