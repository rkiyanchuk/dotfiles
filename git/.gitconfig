[user]
	name = Ruslan Kiianchuk
	email = ruslan.kiianchuk@gmail.com

[alias]
    br = branch
    cm = commit
    co = checkout
    dstat = diff --stat
    hist = log --graph --decorate --date=short --pretty=format:\"%Cblue%h%Creset %ad %Cblue>%Creset %s%Cred%d%Creset [%Cgreen%an%Creset]\"
    mt = mergetool
    st = status
    populate = "!python ~/.git.conf/git-populate.py"
    rffwd = "!bash ~/.git.conf/git-ffwd-branches.sh"
    rpull = "! ~/.git.conf/git-rpull.sh"

[apply]
    whitespace = warn

[core]
    editor = vim

[diff]
    gui = vimdiff

[gitreview]
	username = rkiianchuk
	username = ruslan_kiyanchuk

[help]
    autocorrect = 1

[merge]
    tool = gvimdiff

[mergetool]
    keepBackup = false

[credential]
    helper = cache --timeout=43200

[push]
	default = simple
