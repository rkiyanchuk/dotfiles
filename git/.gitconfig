[user]
    name = Ruslan Kiyanchuk
    email = ruslan.kiyanchuk@gmail.com
    signingkey = FAFCBE8AD9CD1CF9

[alias]
    br = branch -vv
    bra = branch -avv
    cm = commit -S
    co = checkout
    prev = checkout HEAD^1
    next = "!sh -c 'git log --reverse --pretty=%H master | awk \"/$(git rev-parse HEAD)/{getline;print}\" | xargs git checkout'"
    dc = diff --cached
    ds = diff --stat
    hist = log --graph --decorate --date=short --pretty=format:\"%Cblue%h%Creset %Cgreen%ad%Creset %s  %Cgreen%an%Creset %Cred%G?%Creset %Cblue%GK%Creset %Cred%d%Creset \"
    rebase-sign = rebase --exec 'git commit --amend --no-edit -n -S'
    ls = ls-files
    mt = mergetool
    st = status -sb

    # Recursively fast-forward all branches in the repo.
    rffwd = "!bash ~/.git.d/git-ffwd-branches.sh"

    # Recursively pull and update all branches in all repos in current dir.
    rpull = "! ~/.git.d/git-rpull.sh"

[apply]
    whitespace = warn

[core]
    editor = nvim

[gitreview]
    username = ruslan_kiyanchuk

[help]
    autocorrect = 1

[merge]
    tool = vimdiff

[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[mergetool]
    keepBackup = false

[credential]
    helper = cache --timeout=43200

[hub]
    protocol = https

[web]
    browser = google-chrome

[push]
    default = simple

[includeIf "gitdir:~/workspace/brex/"]
    path = ~/workspace/brex/.gitconfig
