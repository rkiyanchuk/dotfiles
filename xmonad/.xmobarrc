-- Solarized colors:
-- Base03    = "#002b36"
-- Base02    = "#073642"
-- Base01    = "#586e75"
-- Base00    = "#657b83"
-- Base0     = "#839496"
-- Base1     = "#93a1a1"
-- Base2     = "#eee8d5"
-- Base3     = "#fdf6e3"
-- Yellow    = "#b58900"
-- Orange    = "#cb4b16"
-- Red       = "#dc322f"
-- Magenta   = "#d33682"
-- Violet    = "#6c71c4"
-- Blue      = "#268bd2"
-- Cyan      = "#2aa198"
-- Green     = "#859900"


Config {
  font = "xft:Liberation Mono-13",
  bgColor = "#002b36",
  fgColor = "#839496",

  -- Adjust width to leave space for 8 icons in tray.
  -- Use bash and xrandr to calculate corresponding width:
  -- echo $(( $(xrandr | grep current | cut -d ' ' -f 8) - (24*8) ))
  position = Static {xpos=0 , ypos=0, width=1728, height=24},

  commands = [
    Run Battery [
      "-t", "<acstatus> <left>%",
      "--",
      "-O", "<fc=#859900><icon=/home/zoresvit/.xmonad/images/ac.xbm/></fc>",
      "-i", "<fc=#b58900><icon=/home/zoresvit/.xmonad/images/ac.xbm/></fc>",
      "-o", "<fc=#2aa198><icon=/home/zoresvit/.xmonad/images/bat_full.xbm/></fc>",
      "-l", "#586e75",
      "-m", "#b58900",
      "-h", "#dc322f",
      "-p", "#859900"
    ] 50,

    Run Cpu [
      "-t", "<fc=#6c71c4><icon=/home/zoresvit/.xmonad/images/cpu.xbm/></fc><total>%",
      "--minwidth", "2",
      "--high", "#dc322f"
    ] 10,

    Run CoreTemp [
      "--template", "<fc=#2aa198><icon=/home/zoresvit/.xmonad/images/temp.xbm/></fc> <core0>Â°C",
      "--Low", "60",
      "--High", "80",
      "--low", "#586e75",
      "--normal", "#b58900",
      "--high", "#dc322f"
    ] 10,

    Run Memory [
        "-t","<fc=#268bd2><icon=/home/zoresvit/.xmonad/images/mem.xbm/></fc> <usedratio>%"
    ] 10,

    Run Swap [
      "-t", "Swap: <usedratio>%",
      "--high", "#dc322f"
    ] 10,

    -- Custom script to display volume.
    -- This is due to built-in volume support in xmobar is disabled in Debian.
    Run Com "/home/zoresvit/.xmonad/volume.sh" [] "myvolume" 1,

    Run Date "%a %b %0d <fc=#859900>%H:%M:%S</fc>" "date" 10,

    -- Gets input from XMonad into stdin to dipslay workspaces and titles.
    Run StdinReader
   ],

   -- Separator character used to wrap variables in xmobar template.
   sepChar = "%",

   -- Alignment separator character.
   -- Everything before it alignes left, everything after alignes right.
   alignSep = "}{",

   -- XMobar Layout template.
   template = "%StdinReader% }{ <fc=#586e75>%battery% %coretemp% %cpu% %memory% <fc=#2aa198><icon=/home/zoresvit/.xmonad/images/volume.xbm/></fc> %myvolume%</fc> %date% "
}
