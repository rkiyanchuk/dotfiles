-- vim: ft=haskell

-- Solarized colors:
-- Base03    = "#002b36"
-- Base02    = "#073642"
-- Base01    = "#586e75"
-- Base00    = "#657b83"
-- Base0     = "#839496"
-- Base1     = "#93a1a1"
-- Base2     = "#eee8d5"
-- Base3     = "#fdf6e3"
-- Yellow    = "#b58900"
-- Orange    = "#cb4b16"
-- Red       = "#dc322f"
-- Magenta   = "#d33682"
-- Violet    = "#6c71c4"
-- Blue      = "#268bd2"
-- Cyan      = "#2aa198"
-- Green     = "#859900"


Config {
    font = "xft:Dejavu Sans Mono:size=14,Material Design Icons:size=14"
  , bgColor = "#002b36"
  , fgColor = "#839496"

  -- Adjust width to leave space for 8 icons in tray.
  -- Use bash and xrandr to calculate corresponding width:
  -- echo $(( $(xrandr | grep current | cut -d ' ' -f 8) - (24*8) ))
  , position = Static {xpos=0 , ypos=0, width=1920, height=32}

    -- layout
  , sepChar =  "%"   -- delineator between plugin names and straight text
  , alignSep = "}{"  -- separator between left-right alignment
  , template = "%StdinReader% }{ <fc=#586e75>%battery% %cpu% %memory% %coretemp% <fc=#2aa198></fc> %volume%</fc> %date% "


  -- general behavior
  , lowerOnStart =     True    -- send to bottom of window stack on start
  , hideOnStart =      False   -- start with window unmapped (hidden)
  --, allDesktops =      True    -- show on all desktops
  , overrideRedirect = True    -- set the Override Redirect flag (Xlib)
  --, pickBroadest =     False   -- choose widest display (multi-monitor)
  , persistent =       True    -- enable/disable hiding (True = disabled)

  , commands =
  [
    -- Gets input from XMonad into stdin to dipslay workspaces and titles.
      Run StdinReader

    , Run Battery [
        "--template", "<acstatus> <left>%"
      , "--Low", "15"
      , "--High", "30"
      , "--low", "#dc322f"
      , "--normal", "#b58900"
      , "--high", "#586e75"
      , "--"
      , "-o", "<fc=#2aa198></fc>"
      , "-O", "<fc=#859900></fc>"
      , "-i", "<fc=#b58900></fc>"
    ] 100

    , Run Cpu [
        "-t", "<fc=#6c71c4></fc> <total>%"
      , "--minwidth", "2"
      , "--high", "#dc322f"
    ] 20

    , Run CoreTemp [
        "--template", "<fc=#2aa198></fc> <core0>°C"
      , "--Low", "70"
      , "--High", "80"
      , "--low", "#586e75"
      , "--normal", "#b58900"
      , "--high", "#dc322f"
    ] 50

    , Run Memory [
        "-t","<fc=#268bd2></fc> <usedratio>%"
    ] 20

    , Run Date "%a %b %0d <fc=#859900>%H:%M:%S</fc>" "date" 10

    , Run Com "/home/zoresvit/.xmonad/volume.sh" [] "volume" 20
  ]
}
