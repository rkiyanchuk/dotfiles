-- Green     = "#859900"


Config {
    font        = "xft:Hack:size=14,Material Design Icons:size=14"
  , bgColor     = "#31363b"
  , fgColor     = "#bdc3c7"
  , position    = BottomSize C 100 28

  -- layout
  , sepChar     = "%"   -- Delimeter between plugin names and straight text.
  , alignSep    = "}{"  -- Separator between left-right alignment.
  , template    = "%StdinReader% }{%battery% %kbd% %date% "
  , commands    =
    [
      Run StdinReader  -- Dipslay input about workspaces and titles from XMonad.

    , Run Battery [
        "--template", "<leftipat><left>%"
      , "--minwidth", "2"
      , "--Low", "15"
      , "--High", "30"
      , "--low", "#da4453"
      , "--normal", "#bdc3c7"
      , "--high", "#bdc3c7"
      , "--"
      , "--on-icon-pattern", ""
      , "--off-icon-pattern", ""
      , "--idle-icon-pattern", ""
      ] 50

    , Run Kbd [("us(altgr-intl)", "<fc=#1d99f3>En</fc>"),
               ("ru", "<fc=#da4453>Ru</fc>"),
               ("ua", "<fc=#fdbc4b>Uk</fc>")]

    , Run Date "%a %b %0d <fc=#27ae60>%H:%M:%S</fc>" "date" 10
    ]
}
