-- vim: ft=haskell

-- Solarized colors:
-- Base03    = "#002b36"
-- Base02    = "#073642"
-- Base01    = "#586e75"
-- Base00    = "#657b83"
-- Base0     = "#839496"
-- Base1     = "#93a1a1"
-- Base2     = "#eee8d5"
-- Base3     = "#fdf6e3"
-- Yellow    = "#b58900"
-- Orange    = "#cb4b16"
-- Red       = "#dc322f"
-- Magenta   = "#d33682"
-- Violet    = "#6c71c4"
-- Blue      = "#268bd2"
-- Cyan      = "#2aa198"
-- Green     = "#859900"


Config {
    font        = "xft:Dejavu Sans Mono:size=14,Material Design Icons:size=14"
  , bgColor     = "#152327"
  , fgColor     = "#839496"

  , position    = TopSize C 100 32

  -- layout
  , sepChar     = "%"   -- Delimeter between plugin names and straight text.
  , alignSep    = "}{"  -- Separator between left-right alignment.
  , template    = "%StdinReader% }{%battery% %cpu% %memory% %coretemp% %default:Master% %kbd%  %date% "

  -- behavior
  --, lowerOnStart        = False   -- Send to bottom of window stack on start.

  , commands =
    [
      Run StdinReader  -- Dipslay input about workspaces and titles from XMonad.

    , Run Battery [
        "--template", "<leftipat><left>%"
      , "--minwidth", "2"
      , "--Low", "15"
      , "--High", "30"
      , "--low", "#dc322f"
      , "--normal", "#93a1a1"
      , "--high", "#839496"
      , "--"
      , "--on-icon-pattern", ""
      , "--off-icon-pattern", ""
      , "--idle-icon-pattern", ""
      ] 100

    , Run Cpu [
        "-t", "<total>%"
      , "--minwidth", "2"
      , "--Low", "30"
      , "--High", "80"
      , "--low", "#839496"
      , "--high", "#dc322f"
      , "--normal", "#93a1a1"
      ] 20

    , Run Memory [
        "-t","<usedratio>%"
      , "--minwidth", "2"
      , "--Low", "30"
      , "--low", "#839496"
      , "--normal", "#93a1a1"
      , "--High", "80"
      , "--high", "#dc322f"
      ] 20

    , Run CoreTemp [
        "--template", "<core0>°C"
      , "--minwidth", "2"
      , "--Low", "60"
      , "--High", "80"
      , "--low", "#839496"
      , "--normal", "#93a1a1"
      , "--high", "#dc322f"
      ] 50

    , Run Volume "default" "Master" [
        "-t", "<status><volume>%"
      , "--minwidth", "2"
      , "--High", "80"
      , "--high", "#93a1a1"
      , "--"
      , "--on", ""
      , "--off", ""
      , "--onc", "#839496"
      , "--offc", "#dc322f"
      ] 10

    , Run Kbd [("us(altgr-intl)", "<fc=#839496>En</fc>"),
               ("ru", "<fc=#dc322f>Ru</fc>"),
               ("ua", "<fc=#b58900>Uk</fc>")]

    , Run Date "%a %b %0d <fc=#859900>%H:%M:%S</fc>" "date" 10
    ]
}
