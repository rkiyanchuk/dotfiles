-- vim: ft=haskell

-- Solarized colors:
-- Base03    = "#002b36"
-- Base02    = "#073642"
-- Base01    = "#586e75"
-- Base00    = "#657b83"
-- Base0     = "#839496"
-- Base1     = "#93a1a1"
-- Base2     = "#eee8d5"
-- Base3     = "#fdf6e3"
-- Yellow    = "#b58900"
-- Orange    = "#cb4b16"
-- Red       = "#dc322f"
-- Magenta   = "#d33682"
-- Violet    = "#6c71c4"
-- Blue      = "#268bd2"
-- Cyan      = "#2aa198"
-- Green     = "#859900"


Config {
    font        = "xft:Dejavu Sans Mono:size=14,Material Design Icons:size=14"
  , bgColor     = "#152327"
  , fgColor     = "#839496"

  , position    = TopSize C 100 32

  -- layout
  , sepChar     = "%"   -- Delimeter between plugin names and straight text.
  , alignSep    = "}{"  -- Separator between left-right alignment.
  , template    = "%StdinReader% }{ %battery% %cpu% %memory% %coretemp% %volume% %date% %bright% %kbd% "

  -- behavior
  , lowerOnStart        = True   -- Send to bottom of window stack on start.
  , allDesktops         = True
  , overrideRedirect    = False  -- Make Xmobar behave like dock app.

  , commands =
    [
      Run StdinReader  -- Dipslay input about workspaces and titles from XMonad.

    , Run Battery [
        "--template", "|<acstatus> <leftipat>|"
      , "--Low", "15"
      , "--High", "30"
      , "--low", "#dc322f"
      , "--normal", "#b58900"
      , "--high", "#586e75"
      , "--"
      , "--on-icon-pattern", ""
      , "--off-icon-pattern", ""
      , "--idle-icon-pattern", ""
    ] 100

    , Run Cpu [
        "-t", "<fc=#6c71c4></fc> <total>%"
      , "--minwidth", "2"
      , "--high", "#dc322f"
    ] 20

    , Run CoreTemp [
        "--template", "<fc=#2aa198></fc> <core0>°C"
      , "--Low", "70"
      , "--High", "80"
      , "--low", "#586e75"
      , "--normal", "#b58900"
      , "--high", "#dc322f"
    ] 50

    , Run Memory [
        "-t","<fc=#268bd2></fc> <usedratio>%"
      ] 20

    , Run Date "%a %b %0d <fc=#859900>%H:%M:%S</fc>" "date" 10

    , Run Com "/home/zoresvit/.xmonad/volume.sh" [] "volume" 20
    , Run Kbd [("us(altgr-intl)", "En"), ("ru", "Ru"), ("ua", "Uk")]

    , Run Brightness [
        "-t", "<ipat>"
      , "--"
      , "-D", "intel_backlight"
      , "--brightness-icon-pattern", "x"
      ] 50
    ]
}
