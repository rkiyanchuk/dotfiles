" vim: set ft=vimperator:

set animations
set focuscontent
set hlsearch
set incsearch
set smartcase
set ignorecase
set smartcase

map <Esc> <C-c>


map <C-h> :history<CR>
map <leader>p :hardcopy<CR>

colorscheme solarized-light


map <F3> :set apptab<CR>
map <F4> :set noapptab<CR>
map D :tabclose!<CR>

command! localhost open http://localhost


map <F5> slack()

" Hide bottom statusline.
:js << EOJS
function toggle_bottombar() {
  var bb = document.getElementById('liberator-bottombar');
  if (!bb)
    return;
  bb.style.height = (bb.style.height == '') ? '0px' : '';
  bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
EOJS

map <silent> <F2> :js toggle_bottombar()<CR>
