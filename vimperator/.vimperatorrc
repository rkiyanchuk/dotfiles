" vim: set ft=vimperator:

set animations
set focuscontent
set hlsearch
set incsearch
set smartcase
set ignorecase
set smartcase

colorscheme solarized-light


map <leader>p :hardcopy<CR>
map <leader>e :clearly<CR>  " Activate Evernote Clearly plugin.

" Use full zoom by default.
map zi zI
map zo zO
map zz zZ

" Manipulating app tabs.
map <F2> :set apptab<CR>
map <F3> :set noapptab<CR>
map D :tabclose!<CR>


" Hide status bar when Vimperator is disabled.
noremap <insert> :js updateBottomBar(true)<CR><insert>

" Hide status bar when fullscreen mode is detected.
autocmd Fullscreen .* js updateBottomBar()

" Re-enable bottom status bar on following commands:
noremap : :js updateBottomBar(false)<CR>:
noremap o :js updateBottomBar(false)<CR>o
noremap O :js updateBottomBar(false)<CR>O
noremap t :js updateBottomBar(false)<CR>t
noremap T :js updateBottomBar(false)<CR>t
noremap / :js updateBottomBar(false)<CR>/
cnoremap <CR> <CR>:js updateBottomBar()<CR>
cnoremap <Esc> <Esc>:js updateBottomBar()<CR>


command! localhost open http://localhost

:js << EOF

let hlContentSepValue = highlight.get('ContentSeparator').value

function updateBottomBar(close = window.fullScreen) {
  let bb = document.getElementById('liberator-bottombar')
  if (! bb) return

  if (close) {
    bb.style.height = '0px'
    bb.style.overflow = 'hidden'
    liberator.execute('highlight ContentSeparator display: none;')
  }
  else {
    bb.style.height = ''
    bb.style.overflow = ''
    liberator.execute('highlight ContentSeparator ' + hlContentSepValue)
  }
}
updateBottomBar()
EOF
