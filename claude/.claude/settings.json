{
  "permissions": {
    "allow": [
      "mcp__voicemode__converse"
    ]
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__voicemode__converse",
        "hooks": [
          {
            "type": "command",
            "command": "voice-mode whisper start; voice-mode kokoro start"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "voice-mode whisper stop; voice-mode kokoro stop"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "alwaysThinkingEnabled": false
}
